#include <stdio.h>
#include <string.h>
#include <ctype.h>

char* Getip()
{
    static char input_ip[15];
    int i,j=0;
    printf("Type an IP address: ");
    scanf("%s",&input_ip);
    if (strlen(input_ip)<7||strlen(input_ip)>15)
        Getip();
    for (i=0;i<strlen(input_ip);i++)
    {
        char c=input_ip[i];
        if (isdigit(c)!=0)
            continue;
        else if (c=='.')
        {
            j++;
            continue;
        }
        else
            Getip();
    }
    if (j!=3)
        Getip();
    return input_ip;
}

int main()
{
    char ip[15];
    strcpy(ip,Getip());
    printf("%s\n",ip);
    printf("%d\n",strlen(ip));
    return 0;
}
